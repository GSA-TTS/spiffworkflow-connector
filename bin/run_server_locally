#!/usr/bin/env bash

function error_handler() {
  echo >&2 "Exited with BAD EXIT CODE '${2}' in ${0} script at line: ${1}."
  exit "$2"
}
trap 'error_handler ${LINENO} $?' ERR
set -o errtrace -o errexit -o nounset -o pipefail

if [[ -z "${FLASK_DEBUG:-}" ]]; then
  export FLASK_DEBUG=1
fi

export AWS_PRIVATE_SECRET_ACCESS_KEY=longtest
export AWS_S3_PRIVATE_ENDPOINT="http://minio:9000"
mc alias set myminio "${AWS_S3_PRIVATE_ENDPOINT}" minioadmin minioadmin
mc policy set download myminio/testbucket

export FLASK_SESSION_SECRET_KEY=super_secret_key
poetry run flask run -p ${CONNECTOR_PROXY_PORT:-7004} --host=0.0.0.0
